@model WebBiblioteca.Models.UsuarioView

@{
    ViewData["Title"] = "Administracao";
}

<h1>Administracao</h1>

<hr />
@using (Html.BeginForm("Acesso", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-4">
            @if (@ViewBag.Usuario != string.Empty)
            {
                <div class="text-center text-danger">
                    @ViewBag.Usuario
                </div>
            }
            <form asp-action="Administracao">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha" class="control-label"></label>
                    <input asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Acesso área administrativa" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>   
}
<div>
    <a asp-action="Index">Voltar para Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
