@model IEnumerable<WebBiblioteca.Models.LivroView>

@{
    ViewData["Title"] = "Livros";
}

<h2>Lista de Livros</h2>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Nome)</th>
        <th>@Html.DisplayNameFor(model => model.Autor)</th>
        <th>@Html.DisplayNameFor(model => model.Editora)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Autor)</td>
            <td>@Html.DisplayFor(modelItem => item.Editora)</td>            
        </tr>
    }
</table>

